{
  "name": "@skitscript/web-compiler-nodejs-noscript",
  "description": "A Skitscript document compiler targeting the web, built using NodeJS and including no Javascript in its output.",
  "version": "0.0.0",
  "engines": {
    "node": ">=16.11.1"
  },
  "engineStrict": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/skitscript/web-compiler-nodejs-noscript"
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "license": "MIT",
  "scripts": {
    "buildClean": "del-cli \"**/*.js\" \"**/*.d.ts\" \"!**/node_modules/**/*\" \"!**/submodules/**/*\"",
    "buildLint": "eslint \"**/*.ts\"",
    "buildLintFix": "eslint --fix \"**/*.ts\"",
    "buildTypeScript": "tsc",
    "buildJasmine": "jasmine --config=jasmine.json",
    "buildC8": "c8 --check-coverage --all --exclude \"submodules\" --exclude \"**/*.ts\" --exclude \"**/*.d.ts\" --exclude \"**/unit.*\" --lines 100 --functions 100 --branches 100 --statements 100 npm run-script buildJasmine",
    "test": "npm-run-all buildClean buildLintFix buildTypeScript buildC8"
  },
  "files": [
    "**/index.js",
    "**/index.d.ts"
  ],
  "types": "index.d.ts",
  "sideEffects": false,
  "dependencies": {
    "@skitscript/mapper-nodejs": "^1.0.6",
    "@skitscript/parser-nodejs": "^1.0.6",
    "fast-xml-parser": "^4.2.2",
    "html-escaper": "^3.0.3",
    "html-minifier": "^4.0.0",
    "pug": "^3.0.2",
    "sass": "^1.62.1",
    "svgo": "^3.0.2"
  },
  "devDependencies": {
    "@skitscript/types-nodejs": "6.0.1",
    "@types/html-escaper": "^3.0.0",
    "@types/html-minifier": "^4.0.2",
    "@types/node": "^18.16.3",
    "@types/pug": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "c8": "^7.13.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.39.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "jasmine": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.0.4"
  }
}
